{% extends 'base.html.twig' %}

{% block title %} Obnova hesla - {{ site_name }} {% endblock %}

{% block body %}

    <div class="container">
        <div class="container">
            <h1>Obnova hesla</h1>
            <br>
            {{ form_start(resetForm) }}
                <div class="row">
                    <div class="input-field">
                        {{ form_label(resetForm.plainPassword.first, 'Heslo') }}
                        {{ form_widget(resetForm.plainPassword.first) }}
                    </div>
                    <span class="helper-text red-text">{{ form_errors(resetForm.plainPassword.first) }}</span>
                </div>

                <div class="row">
                    <div class="input-field">
                        {{ form_label(resetForm.plainPassword.second, 'Heslo znovu') }}
                        {{ form_widget(resetForm.plainPassword.second) }}
                    </div>
                    <span class="helper-text red-text">{{ form_errors(resetForm.plainPassword.second) }}</span>
                </div>

                <div class="center-align">
                    <button type="submit" class="waves-effect waves-light btn-large light-blue">Nastavit</button>
                </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
    <br><br>

{% endblock %}
