{% extends 'admin/admin_base.html.twig' %}

{% block admin_body %}

    {# Časy vytvoření a aktualizace #}
    {{ include('fragments/_instance_created_updated.html.twig', {instance: productCategoryGroupInstance}) }}

    {{ form_start(productCategoryGroupForm) }}
        {{ form_row(productCategoryGroupForm.name) }}
        {{ form_row(productCategoryGroupForm.categories, { 'attr': {'data-index': productCategoryGroupForm.categories|length > 0 ? productCategoryGroupForm.categories|last.vars.name + 1 : 0} }) }}
        {{ form_rest(productCategoryGroupForm) }}
    {{ form_end(productCategoryGroupForm) }}

    {% if productCategoryGroupInstance.getId() is not null and is_granted('product_category_delete') %}
        <div class="row center-align">
            <a href="{{ path('admin_product_category_delete', {id: productCategoryGroupInstance.getId()}) }}">Smazat</a>
        </div>
    {% endif %}

{% endblock %}
