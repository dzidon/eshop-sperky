{% extends 'admin/admin_base.html.twig' %}

{% set can_edit = is_granted('product_option_edit') %}
{% set can_delete = is_granted('product_option_delete') %}

{% block admin_subheading_extra %}

    {% if can_edit %}
        <a href=" {{ path('admin_product_option_edit') }} " class="btn-floating btn-medium waves-effect waves-light blue"><i class="material-icons">add</i></a>
    {% endif %}

{% endblock %}

{% block admin_body %}

    <div class="row">
        {# Formulář - vyhledávací pole, řazení #}
        {{ include('fragments/forms_unique/_form_search_order.html.twig', {form: searchForm}) }}
    </div>

    <div class="row">
        <h4>Výsledky ({{ pagination.getTotalItems() }})</h4>

        {% if optionGroups is empty %}
            Hledání neodpovídají žádné skupiny produktových voleb.
        {% else %}
            <div class="collection">
                {% for optionGroup in optionGroups %}
                    <div class="collection-item valign-wrapper">
                        <div class="col s9 no-padding">
                            <strong>
                                {{ optionGroup.getName() }}
                            </strong>
                        </div>

                        <div class="col s3 no-padding right-align">
                            {% if can_edit %}
                                <a href="{{ path('admin_product_option_edit', {id: optionGroup.getId()}) }}">
                                    <i class="fas fa-edit"></i>
                                </a>
                            {% endif %}

                            {% if can_delete %}
                                <a href="{{ path('admin_product_option_delete', {id: optionGroup.getId()}) }}">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {# Pagination #}
    {{ include('fragments/_pagination.html.twig') }}

{% endblock %}