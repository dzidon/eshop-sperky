{% extends 'admin/admin_base.html.twig' %}

{% set can_edit = is_granted('product_category_edit') %}
{% set can_delete = is_granted('product_category_delete') %}

{% block admin_subheading_extra %}

    {% if can_edit %}
        <a href=" {{ path('admin_product_category_edit') }} " class="btn-floating btn-medium waves-effect waves-light light-blue"><i class="material-icons">add</i></a>
    {% endif %}

{% endblock %}

{% block admin_body %}

    <div class="row">
        {# Formulář - vyhledávací pole, řazení #}
        {{ include('fragments/forms_unique/_form_search_order.html.twig', {form: searchForm}) }}
    </div>

    <div class="row">
        <h4>Výsledky ({{ pagination.getTotalItems() }})</h4>

        {% if categoryGroups is empty %}
            Hledání neodpovídají žádné skupiny produktových kategorií.
        {% else %}
            <div class="collection">
                {% for group in categoryGroups %}
                    <div class="collection-item">
                        <strong>
                            {{ group.getName() }}
                        </strong>

                        {% if can_delete %}
                            <a href=" {{ path('admin_product_category_delete', {id: group.getId()}) }} " class="secondary-content">
                                <i class="material-icons">delete</i>
                            </a>
                        {% endif %}

                        {% if can_edit %}
                            <a href=" {{ path('admin_product_category_edit', {id: group.getId()}) }} " class="secondary-content">
                                <i class="material-icons">create</i>
                            </a>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {# Pagination #}
    {{ include('fragments/_pagination.html.twig') }}

{% endblock %}