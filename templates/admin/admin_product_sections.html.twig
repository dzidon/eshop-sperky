{% extends 'admin/admin_base.html.twig' %}

{% set can_edit = is_granted('product_section_edit') %}
{% set can_delete = is_granted('product_section_delete') %}

{% block admin_subheading_extra %}
    {% if can_edit %}
        <a href="{# {{ path('admin_product_section_edit') }} #} " class="btn-floating btn-medium waves-effect waves-light light-blue"><i class="material-icons">add</i></a>
    {% endif %}
{% endblock %}

{% block admin_body %}

    <div class="row">
        <h4>Hledat</h4>

        {# Formulář - vyhledávací pole, řazení #}
        {{ include('fragments/forms_unique/_form_search_order.html.twig', {form: searchForm}) }}
    </div>

    <div class="row">
        <h4>Výsledky hledání</h4>
        {% if sections is empty %}
            Hledání neodpovídají žádné produktové sekce.
        {% else %}
            <div class="collection">
                {% for section in sections %}
                    <div class="collection-item">
                        <strong>
                            {{ section.getName() }}
                        </strong>

                        {% if section.isHidden() %}
                            - <span class="red-text">SKRYTO</span>
                        {% endif %}

                        {% if can_delete %}
                            <a href=" {# {{ path('admin_product_section_delete', {id: section.getId()}) }} #} " class="secondary-content">
                                <i class="material-icons">delete</i>
                            </a>
                        {% endif %}

                        {% if can_edit %}
                            <a href=" {# {{ path('admin_product_section_edit', {id: section.getId()}) }} #} " class="secondary-content">
                                <i class="material-icons">create</i>
                            </a>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {# Pagination #}
    {{ include('fragments/_pagination.html.twig') }}

{% endblock %}