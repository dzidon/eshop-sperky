{% extends 'profile/profile_base.html.twig' %}

{% block profile_body %}

    <div class="section">
        <div class="row">
            <h3 class="no-mar-top">{{ breadcrumbs.getPageTitle() }}</h3>
        </div>

        {% if addressInstance.getId() is not null %}
            <div class="row">
                {% if addressInstance.getCreated() is not null %}
                    Vytvořeno: {{ addressInstance.getCreated()|date('d. m. Y H:i:s') }}
                {% endif %}

                {% if addressInstance.getCreated() != addressInstance.getUpdated() and addressInstance.getUpdated() is not null %}
                    <br>Upraveno: {{ addressInstance.getUpdated()|date('d. m. Y H:i:s') }}
                {% endif %}
            </div>
            <br>
        {% endif %}

        {{ form_start(addressForm) }}
            <div class="row">
                <div class="input-field">
                    {{ form_widget(addressForm.alias) }}
                    {{ form_label(addressForm.alias, 'Alias') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(addressForm.alias) }}</span>
            </div>

            <div class="row">
                <div class="input-field">
                    {{ form_widget(addressForm.country) }}
                    {{ form_label(addressForm.country, 'Země') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(addressForm.country) }}</span>
            </div>

            <div class="row">
                <div class="input-field">
                    {{ form_widget(addressForm.street) }}
                    {{ form_label(addressForm.street, 'Ulice a číslo popisné') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(addressForm.street) }}</span>
            </div>

            <div class="row">
                <div class="input-field">
                    {{ form_widget(addressForm.additionalInfo) }}
                    {{ form_label(addressForm.additionalInfo, 'Doplněk adresy') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(addressForm.additionalInfo) }}</span>
            </div>

            <div class="row">
                <div class="input-field">
                    {{ form_widget(addressForm.town) }}
                    {{ form_label(addressForm.town, 'Obec') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(addressForm.town) }}</span>
            </div>

            <div class="row">
                <div class="input-field">
                    {{ form_widget(addressForm.zip) }}
                    {{ form_label(addressForm.zip, 'PSČ') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(addressForm.zip) }}</span>
            </div>

            <div class="row">
                <div class="input-field">
                    {{ form_widget(addressForm.company) }}
                    {{ form_label(addressForm.company, 'Název firmy') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(addressForm.company) }}</span>
            </div>

            <div class="row">
                <div class="input-field">
                    {{ form_widget(addressForm.ic) }}
                    {{ form_label(addressForm.ic, 'IČ') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(addressForm.ic) }}</span>
            </div>

            <div class="row">
                <div class="input-field">
                    {{ form_widget(addressForm.dic) }}
                    {{ form_label(addressForm.dic, 'DIČ') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(addressForm.dic) }}</span>
            </div>

            <div class="row">
                <label>
                    {{ form_widget(addressForm.agreePrivacy, {'attr': {'class': 'filled-in checkbox-light-blue'}}) }}
                    <span>Souhlasím se zpracováním osobních údajů</span>
                </label>
                <span class="helper-text red-text">{{ form_errors(addressForm.agreePrivacy) }}</span>
            </div>
            <br>

            <div class="center-align">
                <button type="submit" class="waves-effect waves-light btn-large light-blue">Uložit</button>
            </div>
        {{ form_end(addressForm) }}
    </div>

{% endblock %}
