{% extends 'profile/profile_base.html.twig' %}

{% block profile_body %}

    <div class="section">
        <div class="row">
            <h3 class="no-mar-top">{{ breadcrumbs.getPageTitle() }}</h3>
        </div>

        {{ form_start(changeForm) }}
            <div class="row">
                <div class="input-field">
                    {{ form_widget(changeForm.oldPlainPassword) }}
                    {{ form_label(changeForm.oldPlainPassword, 'Aktuální heslo') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(changeForm.oldPlainPassword) }}</span>
            </div>

            <div class="row">
                <div class="input-field">
                    {{ form_widget(changeForm.newPlainPassword.repeated.first) }}
                    {{ form_label(changeForm.newPlainPassword.repeated.first, 'Nové heslo') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(changeForm.newPlainPassword.repeated.first) }}</span>
            </div>

            <div class="row">
                <div class="input-field">
                    {{ form_widget(changeForm.newPlainPassword.repeated.second) }}
                    {{ form_label(changeForm.newPlainPassword.repeated.second, 'Nové heslo znovu') }}
                </div>
                <span class="helper-text red-text">{{ form_errors(changeForm.newPlainPassword.repeated.second) }}</span>
            </div>

            <div class="center-align">
                <button type="submit" class="waves-effect waves-light btn-large light-blue">Nastavit</button>
            </div>
        {{ form_end(changeForm) }}
    </div>

{% endblock %}
