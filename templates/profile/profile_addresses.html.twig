{% extends 'profile/profile_base.html.twig' %}

{% block profile_subheading_extra %}
    <a href="{{ path('profile_address') }}" class="btn-floating btn-medium waves-effect waves-light light-blue"><i class="material-icons">add</i></a>
{% endblock %}

{% block profile_body %}

    <div class="row">
        <h4>Hledat</h4>

        {# Formulář - vyhledávací pole, řazení #}
        {{ include('fragments/forms_unique/_form_search_order.html.twig', {form: searchForm}) }}
    </div>

    <div class="row">
        <h4>Výsledky ({{ pagination.getTotalItems() }})</h4>

        {% if addresses is empty %}
            Hledání neodpovídají žádné adresy.
        {% else %}
            {% for address in addresses %}
                <div class="card white black-text">
                    <div class="card-content">
                        <span class="card-title">{{ address.getAlias() }}</span>
                        <p>Země: {{ address.getCountry() }}</p>
                        <p>Ulice a číslo popisné: {{ address.getStreet() }}</p>

                        {% if address.getAdditionalInfo() is not null %}
                            <p>Doplněk adresy: {{ address.getAdditionalInfo() }}</p>
                        {% endif %}

                        <p>Obec: {{ address.getTown() }}</p>
                        <p>PSČ: {{ address.getZip() }}</p>

                        {% if address.getCompany() is not null and address.getIc() is not null and address.getDic() is not null %}
                            <br>

                            <p>Název firmy: {{ address.getCompany() }}</p>
                            <p>IČ: {{ address.getIc() }}</p>
                            <p>DIČ: {{ address.getDic() }}</p>
                        {% endif %}
                    </div>
                    <div class="card-action">
                        <a href="{{ path('profile_address', {id: address.getId()}) }}">Upravit</a>
                        <a href="{{ path('profile_address_delete', {id: address.getId()}) }}">Smazat</a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>

    {# Pagination #}
    {{ include('fragments/_pagination.html.twig') }}

{% endblock %}