{% extends 'form_div_layout.html.twig' %}

{# Řádek formuláře #}
{% block form_row %}
    <div class="row{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
        <div class="input-field">
            {{ form_widget(form) }}
            {{ form_label(form) }}
            {{ form_help(form) }}
            {{ form_errors(form) }}
        </div>
    </div>
{% endblock form_row %}

{# Label #}
{% block form_label -%}
    {% if label is not same as(false) -%}
        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif -%}
        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {%- endif -%}
        {% if label is empty -%}
            {%- if label_format is not empty -%}
                {% set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) %}
            {%- else -%}
                {% set label = name|humanize %}
            {%- endif -%}
        {%- endif -%}
        <{{ element|default('label') }}{% if label_attr %}{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}{% endif %}>
        {%- if translation_domain is same as(false) -%}
            {%- if label_html is same as(false) -%}
                {{- label -}}
            {%- else -%}
                {{- label|raw -}}
            {%- endif -%}
        {%- else -%}
            {%- if label_html is same as(false) -%}
                {{- label|trans(label_translation_parameters, translation_domain) -}}
            {%- else -%}
                {{- label|trans(label_translation_parameters, translation_domain)|raw -}}
            {%- endif -%}
        {%- endif -%}
        {%- if required -%}
            <span class="required-star"> *</span>
        {%- endif -%}
        </{{ element|default('label') }}>
    {%- endif -%}
{% endblock form_label %}

{# Errory #}
{% block form_errors %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <span class="helper-text red-text">{{ error.message }}</span>
        {% endfor %}
    {% endif %}
{% endblock form_errors %}

{# Pomocný text #}
{% block form_help %}
    {% if help is not null %}
        <span class="helper-text">{{ help }}</span>
    {% endif %}
{% endblock form_help %}

{# Řádek pro datum a čas #}
{% block datetime_row %}
    <div class="row{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_help(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock datetime_row %}

{# Řádek checkboxu #}
{% block checkbox_row %}
    <div class="row {% if not valid %} has-error{% endif %}">
        <label>
            {{ form_widget(form, {'attr': {'class': 'filled-in checkbox-light-blue'}}) }}
            {{ form_label(form) }}
            <br>
            {{ form_help(form) }}
            {{ form_errors(form) }}
        </label>
    </div>
{% endblock checkbox_row %}

{# Řádek kolekce #}
{% block collection_row %}
    <div>
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_help(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock collection_row %}

{# Widget kolekce #}
{% block collection_widget %}
    {% if prototype is defined and not prototype.rendered %}
        {% set attr = attr|merge({'data-prototype': form_widget(prototype) }) %}
    {% endif %}

    <div {{ block('widget_attributes') }}>
        {% for child in form %}
            {{ form_widget(child) }}
        {% endfor %}
    </div>
{% endblock collection_widget %}

{# Label kolekce #}
{% block collection_label %}
    <div class="row">
        {{ label }}
        {% if required %}
            <span class="required-star">*</span>
        {% endif %}
    </div>
{% endblock collection_label %}

{# Label checkboxu #}
{% block checkbox_label %}
    <span>
        {{ label }}
        {% if required %}
            <span class="required-star">*</span>
        {% endif %}
    </span>
{% endblock checkbox_label %}

{# Tlačítko #}
{% block button_widget -%}
    {% set attr = attr|merge({class: (attr.class|default('btn-large light-blue') ~ ' waves-effect waves-light btn')|trim}) %}
    <div class="row center-align">
        {{ parent() }}
    </div>
{% endblock button_widget %}

{# Label radio buttonu #}
{% block radio_label %}
    <span>
        {{ label }}
    </span>
{% endblock radio_label %}

{# Radio buttony #}
{% block choice_row %}
    <div class="row {% if not valid %} has-error{% endif %}">
        <div class="radio-label">
            {{ form_label(form) }}
        </div>
        {{ form_widget(form) }}
        {{ form_help(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock choice_row %}

{# Konkrétní radio button nebo skupina radio buttonu #}
{% block choice_widget_expanded %}
    {% for name, choices in form.vars.choices %}
        {% if choices is iterable  %}
            <div class="radio-label">
                <label>
                    {{ choice_translation_domain is same as(false) ? name : name|trans({}, choice_translation_domain) }}
                </label>
            </div>

            {% for key,choice in choices %}
                <div>
                    <label>
                        {{ form_widget(form[key], {'attr': {'class': 'filled-in checkbox-light-blue with-gap'}}) }}
                        {{ form_label(form[key], null) }}
                    </label>
                </div>
            {% endfor %}
        {% else %}
            <div>
                <label>
                    {{ form_widget(form[name], {'attr': {'class': 'filled-in checkbox-light-blue with-gap'}}) }}
                    {{ form_label(form[name], null) }}
                </label>
            </div>
        {% endif %}
    {% endfor %}
{% endblock choice_widget_expanded %}

{# Textarea #}
{% block textarea_widget %}
    {% set attr = attr|merge({class: (attr.class|default('') ~ 'materialize-textarea')|trim}) %}
    {{ parent() }}
{% endblock textarea_widget %}

{# Klikatelné hodnocení s hvězdami #}
{% block star_choice_row %}
    <div class="row {% if not valid %} has-error{% endif %}">
        {{ form_label(form) }}
        <div class="rating">
            {{ form_widget(form) }}
        </div>
        {{ form_help(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock star_choice_row %}

{# Konkrétní hvězda #}
{% block star_choice_widget %}
    {% for child in form %}
        {{ form_widget(child) }}
        <label for="{{ child.vars.id }}">☆</label>
    {% endfor %}
{% endblock star_choice_widget %}

{# Error pod recaptchou #}
{% block ewz_recaptcha_errors %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <div class="center-align helper-text red-text">{{ error.message }}</div>
        {% endfor %}
    {% endif %}
{% endblock ewz_recaptcha_errors %}

