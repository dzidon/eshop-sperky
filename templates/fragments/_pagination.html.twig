{% if pagination.getCurrentPageObjects()|length > 0 %}
    <div class="row center-align">
        <ul class="pagination">
            {% for pageData in pagination.getViewData() %}
                {% if pageData.isDivider %}
                    <li>
                        ...
                    </li>
                {% else %}
                    <li class="{% if pageData.isCurrent %} active {% else %} waves-effect {% endif %}">
                        <a href="{{ path(app.request.get('_route'), pageData.queryParameters) }}">
                            {% set page = constant('QUERY_PARAMETER_PAGE_NAME', pagination) %}
                            {{ pageData.queryParameters[page] }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endif %}