<div class="row center-align">
    <ul class="pagination">
        {% for page in pagination.getViewData() %}
            {% if page.isDivider %}
                <li>
                    ...
                </li>
            {% else %}
                <li class="{% if page.isCurrent %} active {% else %} waves-effect {% endif %}">
                    <a href="{{ path(app.request.get('_route'), {page: page.number}) }}">
                        {{ page.number }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</div>