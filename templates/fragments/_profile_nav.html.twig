{% set route = app.request.get('_route') %}

<div class="collection">
    <a href="{{ path('profile') }}" class="collection-item {% if route == 'profile' %} active {% endif %}">Přehled</a>
    {% if app.user.password is not null %}
        <a href="{{ path('profile_change_password') }}" class="collection-item {% if route == 'profile_change_password' %} active {% endif %}">Změna hesla</a>
    {% endif %}
</div>